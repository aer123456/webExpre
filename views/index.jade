extends layout

block content
    select
        option(value="admin") 管理员
        option(value="user") 用户
        option(value="store") 商家
    input.username(placeholder='请输入用户名')  
    input.passwd(placeholder='请输入密码')
    a(href='#' onclick='submitLogin()') 登录

    //test API
    a(href='#' onclick='testAdd()') testAdd
    a(href='#' onclick='testSearch()') testSearch

    link(rel="stylesheet", href="/stylesheet/index.styl")
    script.
        function submitLogin() {
            var userType = $('select').find("option:selected").val();
            var username = $('.username').val();
            var password = $('.passwd').val();
            alert(username);
            $.post("/login",
                { userType: userType,username: username, password: password },
                function(data){
                alert("Data Loaded: " + data);
            });
        }
        function testAdd() {
            $.post("/admin/add",
                { },
                function(data){
                alert("test add.");
            });
        }
        function testSearch() {
            $.post("/admin/search",
                { },
                function(data){
                    console.info(data);
            });
        }


